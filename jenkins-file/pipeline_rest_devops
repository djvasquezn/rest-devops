node {

   stage('Clone Repository') {
        // Get some code from a GitHub repository
		git 'https://github.com/djvasquezn/rest-devops.git'
    
   }
   stage('Build Maven Image') {
        sudo docker.build("maven-build")
   }
   
   stage('Run Maven Container') {
       
        //Remove maven-build-container if it exists
        sh "sudo docker rm -f maven-build-container"
        
        //Run maven image
        sh "sudodocker run --rm --name maven-build-container maven-build"
   }
   
   stage('Deploy Spring Boot Application') {
        
         //Remove maven-build-container if it exists
        sh "sudo docker rm -f java-deploy-container"
       
        sh "sudo docker run --name java-deploy-container --volumes-from maven-build-container -d -p 8081:8081 rest-devops"
   }

}